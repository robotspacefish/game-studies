pico-8 cartridge // http://www.pico-8.com
version 27
__lua__

function _init()

  is_moving_forward = false
  speed = 1
  top_row = {}

  start_motion = false

  init_top_row()
end

function init_top_row()
  for i = 0, 7 do
    local w = 16
    local x1 = i * w
    local x2 = x1 + w
    add(top_row, { x1 = x1, w = w, x2 = x2 })
  end
end

function debug(str, x, y, c)
  print(str,x,y, c)
end

function _draw()
 	cls()
  palt(0, false) -- make black visible
  palt(15, true) -- make peach transparent
  draw_grid()

  -- draw top row
  for i = 1, #top_row do
    if is_moving_forward then
      top_row[i].x1 -= speed
    end

    spr(64, top_row[i].x1, 0, 2, 2)
  end

end

function draw_grid()
  -- draw grid
  for i = 0, 8 do
    line(i * 16, 0, i* 16, 128, 6)
    line (0, i * 16, 128, i * 16, 6)
  end
end

function _update()
  if (btn(➡️)) then
    is_moving_forward = true
  else
  -- speed = 0
    is_moving_forward = false
  end
end


